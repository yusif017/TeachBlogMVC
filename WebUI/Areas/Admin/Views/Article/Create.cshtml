@model Article

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea id="editor" class="form-control" asp-for="Content"></textarea>
        <span asp-validation-for="Content"></span>
    </div>
    <div class="form-group">
        <label for="photo">Photo</label>
        <input type="file" accept="image/*" name="Photo" class="form-control" id="photo" />
        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories"></select>
    </div>
    <div class="form-group">
        <select name="tagIds" multiple class="form-control">
            @foreach (var item in ViewData["Tags"] as List<Tag>)
            {
                <option value="@item.Id">@item.TagName</option>
            }
        </select>
    </div>

    <input type="submit" value="Create" class="btn btn-info w-100" />
</form>

@section Scripts{
    <script src="//cdn.ckeditor.com/4.21.0/standard/ckeditor.js"></script>
    <script>
         CKEDITOR.replace('editor');
    </script>
}