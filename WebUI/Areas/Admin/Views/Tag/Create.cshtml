@model Tag
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.TagName"></label>
        <input type="text" class="form-control" asp-for="@Model.TagName" />
        <span asp-validation-for="@Model.TagName" class="text-danger"></span>
    </div>
    <input type="submit" value="Create" class="btn btn-success w-100" />
</form>