@model Category
@{
    if (ViewBag.Error != null)
    {
        <p class="alert alert-danger">@ViewBag.Error</p>
    }
}
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.CategoryName"></label>
        <input type="text" class="form-control" asp-for="@Model.CategoryName" />
        <span asp-validation-for="@Model.CategoryName" class="text-danger"></span>
    </div>
    <input type="submit" value="Create" class="btn btn-success w-100" />
</form>